{
  "name": "dev-tools-desktop",
  "version": "1.0.0",
  "description": "Desktop version of dev-tool.dev - Ultimate Developer Toolkit",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security-check": "./scripts/security-check.sh",
    "pre-commit": "npm run security-check"
  },
  "keywords": [
    "electron",
    "developer-tools",
    "utilities",
    "json",
    "base64",
    "uuid",
    "converter"
  ],
  "author": "Dev Tools Desktop",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^12.0.0",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.devtools.desktop",
    "productName": "Dev Tools Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/renderer/js/tools/**/*.js",
      "!src/renderer/js/tools/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
